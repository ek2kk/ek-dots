{
    "layer": "top", // don't dim in special workspaces
    "reload_style_on_change": true,

    "modules-left": [
        "custom/notification",
        "custom/pacman"
    ],

    "modules-center": [
        "hyprland/workspaces"
    ],

    "modules-right": [
        "tray",
        "group/expand",
        "hyprland/language",
        "bluetooth",
        "network",
        "battery",
        "clock"
    ],

    "hyprland/workspaces": {
        "format": "‚óè",
        "persistent-workspaces": {
            "*": [ 1,2,3,4,5 ]
        }
    },

    "battery": {
        "interval":30,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û∞ÇÑ",
        "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "Û∞Åª",
            "Û∞Åº",
            "Û∞Åæ",
            "Û∞ÇÄ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },

    "pulseaudio": {
        "format": "{format_source}{icon} {volume}%",
        "format-muted": "{format_source}Û∞ùü",

        "format-source": "<span color='#${red}'>Û∞ç¨ on</span>  ",  // red
        "format-source-muted": "",

        "format-icons": {
            "default": [ "Û∞ïø", "Û∞ñÄ", "Û∞ïæ", "Û±Ñ†" ]
        },

        "tooltip": false,
        "on-click": "pavucontrol",
        "on-click-right": "pamixer --default-source --toggle-mute"
    },

    "hyprland/language": {
        "format": "Û∞åå {}",
        "format-en": "us",
        "format-ru": "ru"
    },

    "clock": {
        "timezone": "Europe/Moscow",
        "format": "Û∞Öê {:%H:%M}",

        "tooltip": true,
        "tooltip-format": "{:%e %B, %A}"  // 2 April, Saturday
    },

    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet":"Óºâ ",
        "format-disconnected": "Ó¨Å ",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "kitty nmtui"
    },
    "custom/notification": {
        "tooltip": false,
        "format": "Óöê ",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ",
        "format-off": "BT-off",
        "format-disabled": "Û∞Ç≤",
        "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
        "format-alt": "{device_alias} Û∞ÇØ",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager"
    }, 
    "custom/pacman": {
        "format": "Û∞Ö¢ {}",
        "interval": 30,   
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty sh -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "tooltip": false
    },
    "custom/expand": {
        "format": "ÔÑÑ",
        "tooltip": false
    },
    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true
        },
        "modules": ["custom/expand", "custom/colorpicker","cpu","memory","temperature"]
    },
    "custom/colorpicker": {
        "format": "{} ",
        "return-type": "json",
        "interval": "once",
        "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
        "on-click": "~/.config/waybar/scripts/colorpicker.sh",
        "signal": 1
    },
    "cpu": {
        "format": "Û∞ª† ",
        "tooltip": true
    },
    "memory": {
        "format": "ÓøÖ "
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "Ôãâ"
    },
    "tray": {
        "icon-size": 14,
        "spacing": 10
    }
}
